{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "ConnectFour"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ConnectFour": "Data Source=127.0.0.1,1433;Initial Catalog=ConnectFour;User ID=root;Password=ZbWProjekt2024;TrustServerCertificate=true",
    "ConnectFourAuthentication": "Data Source=127.0.0.1,1433;Initial Catalog=ConnectFourAuthentication;User ID=root;Password=ZbWProjekt2024;TrustServerCertificate=true"
  },
  "MqttBroker": {
